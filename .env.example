# LaCherada Environment Variables
# Copy this file to .env and fill in your actual values

# Configuración de la aplicación
VITE_APP_NAME=LaCherada
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# URLs de API
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# Configuración de Firebase
# Get these values from your Firebase project settings
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Emulators (for development)
VITE_USE_FIREBASE_EMULATORS=false
VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080
VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Configuración de entorno
VITE_ENVIRONMENT=development
VITE_DEBUG_MODE=true

# Security & Analytics
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CRASHLYTICS=false

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Configuración de logging
VITE_LOG_LEVEL=info
VITE_SHOW_PERFORMANCE_METRICS=false

# URLs externas
VITE_SUPPORT_EMAIL=soporte@lacherada.com
VITE_CONTACT_PHONE=+1234567890